{
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "breadcrumbs.enabled": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        120
    ],
    "editor.suggestSelection": "first",
    "explorer.openEditors.visible": 0,
    "files.associations": {
        "log": "markdown",
        "notes": "markdown"
    },
    "highlight.regexes": {
        "([^\\x00-\\x7F])": [
            {
                "backgroundColor": "#ff0000",
                "color": "#1f1f1f",
                "fontWeight": "bold",
                "overviewRulerColor": "#ff0000"
            }
        ]
    },
    "multiCommand.commands": [
        {
            "command": "multiCommand.navigateExplorerDownAndPreviewFile",
            "sequence": [
                "list.focusDown",
                "filesExplorer.openFilePreserveFocus"
            ]
        },
        {
            "command": "multiCommand.navigateExplorerUpAndPreviewFile",
            "sequence": [
                "list.focusUp",
                "filesExplorer.openFilePreserveFocus"
            ]
        }
    ],
    "particle.disableWelcomeScreen": true,
    "search.exclude": {
        "**/*.code-search": true,
        "**/bower_components": true,
        "**/node_modules": true
    },
    "terminal.integrated.scrollback": 1000000,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#000",       // Current Line
        "editor.selectionHighlightBackground": "#00f",  // Single Click & Double Click Match
        "editor.wordHighlightBackground": "#00f",       // Single Click (VARIABLES ONLY)
        "editor.wordHighlightStrongBackground": "#00f", // Single Click (METHODS ONLY)
        "editor.hoverHighlightBackground": "#00f",      // Hover (METHODS & VARIABLES ONLY)
        "editor.findMatchBackground": "#f00",           // Search (current)
        "editor.findMatchHighlightBackground": "#00f",  // Search (all)
        "editor.rangeHighlightBackground": "#000"       // Highlight Line during Search
    },
    "workbench.colorTheme": "Default Dark+",
    "workbench.list.horizontalScrolling": true
}
